[
  {
    "name": "solution",
    "type": "text",
    "label": "Solution",
    "description": "Enter the desired solution for the lock. Please note that using long solutions may be suboptimal on small devices.",
    "default": "0123"
  },
  {
    "name": "alphabet",
    "type": "text",
    "label": "Symbols for each segment",
    "description": "Choose the symbols that each segment should bear. The symbols will appear in the order defined here.",
    "default": "0123456789"
  },
  {
    "name": "behaviour",
    "type": "group",
    "importance": "low",
    "label": "Behavioural settings",
    "fields": [
      {
        "name": "autoCheck",
        "type": "boolean",
        "label": "AutoCheck",
        "description": "If autocheck is enabled, the lock will open automatically once the correct solution has been entered.",
        "default": true,
        "optional": true
      },
      {
        "name": "maxAttempts",
        "type": "number",
        "label": "Maximum attempts",
        "description": "Enter the maximum number of opening attempts allowed or leave empty to not limit the number.",
        "min": 1,
        "widget": "showWhen",
        "showWhen": {
          "rules": [
            {
              "field": "autoCheck",
              "equals": false
            }
          ],
          "nullWhenHidden": true
        },
        "optional": true
      },
      {
        "name": "enableRetry",
        "type": "boolean",
        "label": "Enable \"Retry\" button",
        "importance": "low",
        "default": true,
        "optional": true
      },
      {
        "name": "enableSolutionsButton",
        "type": "boolean",
        "label": "Enable \"Show Solution\" button",
        "importance": "low",
        "default": true,
        "optional": true
      }
    ]
  },
  {
    "name": "l10n",
    "type": "group",
    "label": "User interface",
    "common": true,
    "fields": [
      {
        "name": "check",
        "type": "text",
        "label": "Check",
        "default": "Check"
      },
      {
        "name": "submit",
        "type": "text",
        "label": "Submit",
        "default": "Submit"
      },
      {
        "name": "showSolution",
        "type": "text",
        "label": "Show solution",
        "default": "Show solution"
      },
      {
        "name": "retry",
        "type": "text",
        "label": "Retry",
        "default": "Retry"
      },
      {
        "name": "lockOpen",
        "type": "text",
        "label": "Lock open",
        "default": "Lock open!"
      },
      {
        "name": "lockDisabled",
        "type": "text",
        "label": "Lock disabled",
        "default": "No more attempts. Lock disabled."
      },
      {
        "name": "attemptsLeft",
        "type": "text",
        "label": "Attempts left",
        "description": "@number is a placeholder and will be replaced by the respective number of attempts left.",
        "default": "You have @number attempts left."
      }
    ]
  },
  {
    "name": "a11y",
    "type": "group",
    "label": "Accessibility texts",
    "common": true,
    "fields": [
      {
        "name": "sample",
        "type": "text",
        "label": "Sample entry for accessibility strings",
        "description": "This is just a sample entry for accessibility strings.",
        "default": "Sample a11y"
      },
      {
        "name": "dummy",
        "type": "text",
        "label": "Dummy",
        "default": "Dummy",
        "widget": "none"
      }
    ]
  }
]
